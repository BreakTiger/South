.top-title {
  width: 730rpx;
  height: auto;
  border-bottom: 1rpx solid #e9e9e9;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.top-title text {
  font-size: 34rpx;
  font-weight: bold;
  color: #222;
}

.area textarea {
  width: 730rpx;
  height: 300rpx;
}

.clear text {
  color: #ccc;
  font-size: 14px;
  float: right;
  margin-right: 2%;
}

.line {
  width: 100%;
  height: 76rpx;
  background: #f2f2f2;
  font-size: 28rpx;
  color: #222;
  line-height: 34px;
  padding-left: 25rpx;
}

.picture{
  width: 750rpx;
  height: auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 25rpx;
}

.spicture {
  position: relative;
  margin-left: 25rpx;
  margin-bottom: 25rpx;
}

.insets {
  width: 158rpx;
  height: 158rpx;
}

.delet {
  position: absolute;
  top: 110rpx;
  z-index: 100;
}

.rectangular {
  width: 158rpx;
  height: 50rpx;
}

.del {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 10rpx;
  left: 65rpx;
}

.addbox {
  width: 158rpx;
  height: 158rpx;
  border: 1rpx dashed #D9D9D9;
  border-radius: 28rpx;
  margin-left: 25rpx;
  margin-bottom: 25rpx;
}

.addbox image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 15rpx;
  margin-top: 40rpx;
}

.addbox text {
  font-size: 24rpx;
  color: #d9d9d9;
}

.input-line {
  width: 730rpx;
  height: auto;
  border-bottom: 1rpx solid #e9e9e9;
  padding: 30rpx 0;
}

.upBtn {
  width: 690rpx;
  height: 93rpx;
  background: #f08d01;
  font-size: 36rpx;
  color: #fff;
  border: none;
  margin-top: 25rpx;
  margin-bottom: 200rpx;
}

.input-line text {
  font-size: 34rpx;
  color: #222;
  font-weight: bold;
}

.input-line input{
  font-size: 32rpx;
  color: #999999;
  width: 542rpx;
}
