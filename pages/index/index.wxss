
.home-swiper {
  width: 730rpx;
  height: 418rpx;
  border-radius:25rpx;
  margin-top: 12rpx;
}

.home-swiper image {
  width: 100%;
  height: 100%;
  border-radius:25rpx;
}

.navbox {
  width: 750rpx;
  height: auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-content: space-between;
  margin-bottom: 60rpx;
}

.logobox {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 32rpx;
  margin-top: 20rpx;
}

.logo {
  width: 150rpx;
  height: 150rpx;
}

.logo image {
  width: 100%;
  height: 100%;
}

.logo_text {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.titleline {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 25rpx;
}

.title {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 48rpx;
}

.title text {
  font-size: 34rpx;
  color: #222;
  font-weight: bold;
}

.arrow {
  width: 14rpx;
  height: 27rpx;
  margin-left: 30rpx;
}

.point {
  width: 12rpx;
  height: 22rpx;
  background: rgba(240, 145, 2, 1);
  border: 1rpx solid rgba(243, 243, 243, 1);
  border-radius: 12rpx;
  margin-top: 6rpx;
  margin-right: 10rpx;
}

.notice-list {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.list-item {
  width: 730rpx;
  background: #f6f6f6;
  margin-bottom: 25rpx;
}

.noticetitle {
  width: 690rpx;
  height: 80rpx;
  font-size: 30rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
 
}

.read {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.read image {
  width: 30rpx;
  height: 30rpx;
}

.read text {
  font-size: 24rpx;
  color: #666;
  margin-left: 15rpx;
}

.time {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0 15rpx;
}

.time image {
  width: 30rpx;
  height: 30rpx;
}

.time text {
  font-size: 24rpx;
  color: #666;
  margin-left: 15rpx;
}

