.top-line {
  width: 100%;
  height: 120rpx;
  border-bottom: 1rpx solid #d5d5d5;
}

.type {
  width: 50%;
  height: 100%;
}

.type-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-top: 30rpx;
}

.active {
  font-size: 48rpx;
  font-weight: bold;
  color: #f08d01;
}

.cpioint {
  width: 21rpx;
  height: 15rpx;
  background: rgba(240, 141, 1, 1);
  border-radius: 50px 50px 0 0;
  position: relative;
  top: 15rpx;
}

.content {
  width: 100%;
  height: 1334rpx;
}

.list-box {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.list-item {
  width: 730rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10rpx;
  border-bottom: 1rpx solid #e7e7e7;
  padding-bottom: 10rpx;
}

.pic {
  width: 290rpx;
  height: 180rpx;
  border-radius: 25rpx;
  margin-right: 15rpx;
}

.title-read-time {
  width: 410rpx;
  height: 180rpx;
}

.title {
  width: 100%;
  height: 110rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #555;
  margin-bottom: 35rpx;
}

.read-time {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.read image {
  width: 30rpx;
  height: 30rpx;
}

.time image {
  width: 30rpx;
  height: 30rpx;
}

.f1 {
  font-size: 24rpx;
  color: #666;
  margin: 0 20rpx;
}

.notice-list-item {
  width: 730rpx;
  height: auto;
  background: #f6f6f6;
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
}

.point-titel {
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  margin-bottom: 35rpx;
}

.point {
  width: 12rpx;
  height: 22rpx;
  border-radius: 12rpx;
  background: #f09102;
  margin-top: 10rpx;
  margin-right: 30rpx;
}

.titel {
  width: 689rpx;
  height: 70rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}
