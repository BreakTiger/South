/* 易班群 */

/* 整体容器 */
.pages{
  width: 750rpx;
  height: 100%;
  overflow: hidden;
}

.box{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}


/* 行间容器 */
.line{
  width: 750rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0rpx;
  border-bottom: 1rpx solid #E9E9E9;
}


/* 文字 */
.line text{
  color: #444444;
  font-size: 34rpx;
  font-family:PingFang-SC-Bold;
  font-weight: bold;
  line-height: 38rpx;
  margin-left: 35rpx;
}

/* 箭头 */
.right{
  width: 14rpx;
  height: 27rpx;
  margin-right: 35rpx;
}